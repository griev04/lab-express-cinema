<div class="movie-details">
  <div>
    <img src="{{movie.image}}" alt="{{movie.image}} poster">
  </div>

  <div>
    <a href="/movies">Go back</a>
    <h1>{{movie.title}}</h1>
    <h2>Director: {{movie.director}}</h2>
    <h3>Stars</h3>
    <ul>
      {{#each movie.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{movie.description}}</p>
    <ul class="showtimes">
      {{#each movie.showtimes}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </div>
</div>